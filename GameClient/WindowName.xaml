<Window x:Class="GameClient.WindowName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор имени" Height="105" Width="250" WindowStartupLocation="CenterOwner" ResizeMode="CanMinimize" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="TextBox" Grid.Column="1" Margin="0,10,4,5"/>
        <Label Content="Введите ваше имя:" Margin="0,10,0,5"/>
        <Button Grid.ColumnSpan="2" Content="OK"  Grid.Row="2" Width="75" Click="Button_Click" Margin="0,0,0,4"/>
    </Grid>
</Window>